<?xml version="1.0" encoding="utf-8"?>
<ServiceManifest Name="zookeeperpkg"
                 Version="0.0.1"
                 xmlns="http://schemas.microsoft.com/2011/01/fabric"
                 xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 ManifestId="59b4fb77-0363-4e05-bc73-96758498dbe9">
  <ServiceTypes>
    <StatelessServiceType ServiceTypeName="zookeepertype" UseImplicitHost="true" />
  </ServiceTypes>
  <CodePackage Name="Code" Version="0.0.1">
    <EntryPoint>
      <ContainerHost>
        <ImageName>ashishnegi1/zookeeper-sf:0.0.1-alpine</ImageName>
      </ContainerHost>
    </EntryPoint>
  </CodePackage>
  <ConfigPackage Name="Config" Version="0.0.1" />
  <Resources>
    <Endpoints>
	    <Endpoint Protocol="tcp" Name="ClientEndpoint" Port="2181" />
      <Endpoint Protocol="tcp" Name="LeaderEndpoint" Port="2888" />
      <Endpoint Protocol="tcp" Name="LeaderElectionEndpoint" Port="3888" />
    </Endpoints>
  </Resources>
</ServiceManifest>
